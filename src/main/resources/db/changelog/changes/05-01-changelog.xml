<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.31.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1754423260285-1" author="bogdante">
        <createTable tableName="active_short_urls">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_active_short_urls"/>
            </column>
            <column name="short_url_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="full_url" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="short_url_path_variable" type="TEXT"/>
        </createTable>
    </changeSet>
    <changeSet id="1754423260285-2" author="bogdante">
        <createTable tableName="short_urls">
            <column autoIncrement="true" name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_short_urls"/>
            </column>
            <column name="full_url" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="short_url_path_variable" type="TEXT"/>
            <column name="click_count" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="valid_until" type="DATETIME"/>
            <column defaultValueBoolean="true" name="is_active" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1754423260285-3" author="bogdante">
        <addUniqueConstraint columnNames="short_url_id" constraintName="uc_active_short_urls_short_url"
                             tableName="active_short_urls"/>
    </changeSet>
    <changeSet id="1754423260285-4" author="bogdante">
        <addForeignKeyConstraint baseColumnNames="short_url_id" baseTableName="active_short_urls"
                                 constraintName="FK_ACTIVE_SHORT_URLS_SHORT_URLS" referencedColumnNames="id"
                                 referencedTableName="short_urls"/>
    </changeSet>

</databaseChangeLog>